
@{
    ViewBag.Title = "Index";


}
@model RS1_Ispit_asp.net_core.ViewModels.StavkeIndexVM
<table class="table">
    <thead>
        <tr>
            <th>Ucenik</th>
            <th>Odjeljenje</th>
            <th>Broj u dnevniku</th>
            <th>Pristupio</th>
            <th>Rezultat</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.rows)
        {
        <tr>
            <td>@x.Ucenik</td>
            <td>@x.Odjeljenje</td>
            <td>@x.BrojUdnevniku</td>
            @if (!x.PravoNaIspit)
            {
                <td>Nema pravno na ispit</td>
            }
            else if (x.Pristupio)
            {
                <td><a class="btn btn-success" ajax-poziv="da" ajax-rezultat="divID" asp-action="UcenikJePrisutan" asp-route-ispitStavkaId="@x.IspitStavkeId">Da</a></td>
            }
            else
            {
                <td><a class="btn btn-danger" ajax-poziv="da" ajax-rezultat="divID" asp-action="UcenikJeOdsutan" asp-route-ispitStavkaId="@x.IspitStavkeId">Ne</a></td>
            }








        <td>
            <input value="@x.Rezultat" id="@x.IspitStavkeId" class="inputRezultat" ajax-id="@x.IspitStavkeId" />
        </td>







            @if (x.PravoNaIspit && x.Pristupio)
            {
                <td><a class="btn btn-primary"  ajax-poziv="da" ajax-rezultat="divID" asp-action="Uredi" asp-route-ispitStavkaId="@x.IspitStavkeId">Uredi</a></td>
            }else
            {
                <td></td>
            }
        </tr>
        }
    </tbody>
</table>


<script>


</script>







