
@{
    ViewData["Title"] = "DodajUcesnika";
}
@model  RS1_Ispit_asp.net_core.ViewModels.StavkeDodajUcesnikaVM

    <form asp-action="SnimiUcesnika" ajax-poziv="da" ajax-rezultat="divID">
        <div class="form-group">
            <label>Ucesnik</label>
            <select asp-for="OdjeljenjeStavkaId" asp-items="@Model.ListaUcesnika" class="form-control"></select>
        </div>
        <div class="form-group">
            <label>Bodovi</label>
            <input asp-for="Rezultat" class="form-control">
        </div>

        <input type="hidden" asp-for="TakmicenjeId" />
        <input type="hidden" asp-for="TakmicenjeUcesnikId" />

        <button type="submit" class="btn btn-primary">Snimi</button>
    </form>