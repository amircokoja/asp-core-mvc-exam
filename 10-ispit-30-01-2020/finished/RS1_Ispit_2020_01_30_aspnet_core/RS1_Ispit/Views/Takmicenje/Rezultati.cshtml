
@{
    ViewData["Title"] = "Rezultati";
}
@model RS1_Ispit_asp.net_core.ViewModels.TakmicenjeRezultatiVM

<h2>Rezultati</h2>

<div>
    <div class="form-group">
        <label>Skola domacin</label>
        <input asp-for="Skola" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label>Predmet</label>
        <input asp-for="Predmet" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label>Razred</label>
        <input asp-for="Razred" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label>Datum</label>
        <input asp-for="Datum" class="form-control" readonly>
    </div>

    @if (Model.Zakljucano)
    {
        <a href="#" class="btn btn-info">Zakljucano</a>
    }
    else
    {
        <a asp-action="Zakljucaj" asp-route-takmicenjeId="@Model.TakmicenjeId" class="btn btn-danger">Zakljucaj</a>
    }

    <input type="hidden" asp-for="SkolaId" />
    <input type="hidden" asp-for="Razred" />

    <div id="divID"></div>

    <a asp-action="NovoTakmicenje" asp-route-skolaID="@Model.SkolaId" asp-route-razred="@Model.Razred">Novo takmicenje</a>
</div>



<script>
    $(document).ready(function () {
        $.get("/stavke/index?takmicenjeId=@Model.TakmicenjeId", function (data, status) {
            $("#divID").html(data);
        });
    });
</script>