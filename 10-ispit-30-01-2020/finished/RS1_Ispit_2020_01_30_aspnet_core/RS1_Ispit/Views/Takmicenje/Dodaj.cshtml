
@{
    ViewData["Title"] = "Index";
}

@model RS1_Ispit_asp.net_core.ViewModels.TakmicenjeDodajVM


    <form asp-action="Snimi">
        <div class="form-group">
            <label>Skola domacin</label>
            <input asp-for="SkolaId" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label>Predmet</label>
            <select asp-for="PredmetId" asp-items="@Model.ListaPredmeta" class="form-control"></select>
        </div>

        <div class="form-group">
            <label>Razred</label>
            <select asp-for="Razred" class="form-control">
                <option selected value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
        <div class="form-group">
            <label>Datum</label>
            <input asp-for="Datum" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Snimi</button>
    </form>