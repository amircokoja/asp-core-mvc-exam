
@{
    ViewBag.Title = "Index";


}
@model RS1_Ispit_asp.net_core.ViewModels.OdrzanaNastavaUrediVM

    <form asp-action="SnimiUredi">
        <div class="form-group">
            <label>Datum</label>
            <input class="form-control" asp-for="Datum" readonly />
        </div>
        <div class="form-group">
            <label>Predmet</label>
            <input class="form-control" asp-for="Predmet" readonly />
        </div>
        <div class="form-group">
            <label>Napomena</label>
            <input class="form-control" asp-for="Napomena" />
        </div>
    

        <input asp-for="MaturskiIspitId" type="hidden" />

        <button class="btn btn-primary">Snimi</button>
    </form>


<div id="divID"></div>

<script>
    $(document).ready(function () {
        $.get("/ajaxstavke/index?maturskiIspitId=@Model.MaturskiIspitId", function (data, status) {
            $("#divID").html(data);
        });
    });
</script>