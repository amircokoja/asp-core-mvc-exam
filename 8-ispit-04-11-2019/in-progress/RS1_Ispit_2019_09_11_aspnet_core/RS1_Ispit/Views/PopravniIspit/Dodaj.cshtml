
@{
    ViewBag.Title = "Index";


}
@model RS1_Ispit_asp.net_core.ViewModels.PopravniDodajVM

    <form asp-action="Snimi">
        <div class="form-group">
            <label>Predmet</label>
            <input class="form-control" asp-for="Naziv" readonly />
        </div>
        <div class="form-group">
            <label>Razred</label>
            <input class="form-control" asp-for="Razred" readonly />
        </div>
        <div class="form-group">
            <label>Datum ispita</label>
            <input asp-for="Datum" class="form-control" />
        </div>
        <div class="form-group">
            <label>Škola</label>
            <select class="form-control" asp-for="SkolaId" asp-items="@Model.ListaSkola"></select>
        </div>
        <div class="form-group">
            <label>Školska godina</label>
            <select class="form-control" asp-for="SkolskaGodinaId" asp-items="@Model.ListaSkolskihGodina"></select>
        </div>

        <input type="hidden" asp-for="PredmetId" />
        <input type="hidden" asp-for="PopravniIspitId" />

        <button class="btn btn-primary" type="submit">Snimi</button>
    </form>