
@{
    ViewData["Title"] = "Obaveze";
}
@model Ispit.Web.ViewModels.AjaxTestUrediVM

    <h2>Evidentiranje stanja obaveza </h2>
    <form ajax-poziv="da" ajax-rezultat="divID" asp-action="Snimi">
        <div class="form-group">
            <label>Obaveza</label>
            <input asp-for="NazivObaveze" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Završeno procentualno </label>
            <input asp-for="Procenat" class="form-control" />
        </div>
        <input asp-for="StanjeObavezeId" type="hidden" />
        <button type="submit">Snimi</button>
    </form>