@using RS1_Ispit_asp.net_core.EntityModels

@{
    ViewBag.Title = "Index";


}
@model RS1_Ispit_asp.net_core.ViewModels.StavkeIndexVM

<table class="table">
    <thead>
        <tr>
            <th>Student</th>
            <th>Pristupio ispitu </th>
            <th>Ocjena</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.rows)
        {
            <tr>
                <td>@x.Student</td>
                @if (x.Pristupio)
                {
                    <td><a asp-action="Pristupio" asp-route-ispitStavkeId="@x.IspitStavkeId" ajax-poziv="da" ajax-rezultat="divID" class="btn btn-success">Pristupio</a></td>
                }
                else
                {
                    <td><a asp-action="Pristupio" asp-route-ispitStavkeId="@x.IspitStavkeId" ajax-poziv="da" ajax-rezultat="divID" class="btn btn-danger">Nije pristupio</a></td>
                }


                <td>
                    <input value="@x.Ocjena" class="ocjenaPromjena" id="@x.IspitStavkeId" ispitStavkaId="@x.IspitStavkeId" />
                </td>

                @if (x.Pristupio && !Model.Zakljucan && Model.TrenutniDatumVeci)
                {
                    <td><a asp-action="UrediStavke" asp-route-ispitStavkeId="@x.IspitStavkeId" ajax-poziv="da" ajax-rezultat="divID" class="btn btn-success">Uredi</a></td>
                }
            </tr>
        }
    </tbody>
</table>


