
@{
    ViewData["Title"] = "Index";
}


@model RS1_Ispit_asp.net_core.ViewModels.StavkeUrediVM

    <form asp-action="Snimi" ajax-poziv="da" ajax-rezultat="divID" asp-controller="Stavke">
        <div class="form-group">
            <label>Ucenik</label>
                <select class="form-control" asp-for="OdjeljenjeStavkaId" asp-items="@Model.ListaUcenika"></select>
        </div>

        <div class="form-group">
            <label>Bodovi</label>
            <input asp-for="Rezultat" class="form-control" />
        </div>

        <input asp-for="PopravniUcesnikId" type="hidden" />
        <input asp-for="PopravniIspitId" type="hidden" />


        <button type="submit" class="btn btn-primary">Snimi</button>
    </form>