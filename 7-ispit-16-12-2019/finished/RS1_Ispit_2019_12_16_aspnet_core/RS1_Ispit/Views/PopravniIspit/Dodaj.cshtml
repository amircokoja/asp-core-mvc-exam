
@{
    ViewData["Title"] = "Index";
}


@model RS1_Ispit_asp.net_core.ViewModels.PopravniIspitDodajVM

    <form asp-action="Snimi">
        <div class="form-group">
            <label>Clan komisije 1</label>
            <select asp-for="ClanKomisije1Id" asp-items="@Model.ListaNastavnika" class="form-control"></select>
        </div>

        <div class="form-group">
            <label>Clan komisije 2</label>
            <select asp-for="ClanKomisije2Id" asp-items="@Model.ListaNastavnika" class="form-control"></select>
        </div>
        <div class="form-group">
            <label>Clan komisije 3</label>
            <select asp-for="ClanKomisije3Id" asp-items="@Model.ListaNastavnika" class="form-control"></select>
        </div>

        <div class="form-group">
            <label>Datum ispita</label>
            <input asp-for="Datum" class="form-control" />
        </div>
        <div class="form-group">
            <label>Predmet</label>
            <select asp-for="PredmetId" asp-items="@Model.ListaPredmeta" class="form-control"></select>
        </div>

        <div class="form-group">
            <label>Skola</label>
            <input asp-for="Skola" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label>Skolska godina</label>
            <input asp-for="SkolskaGodina" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Razred</label>
            <input asp-for="Razred" class="form-control" readonly />
        </div>

        <input asp-for="SkolskaGodinaID" type="hidden" />
        <input asp-for="SkolaID" type="hidden" />

        <button type="submit" class="btn btn-primary">Snimi</button>
    </form>