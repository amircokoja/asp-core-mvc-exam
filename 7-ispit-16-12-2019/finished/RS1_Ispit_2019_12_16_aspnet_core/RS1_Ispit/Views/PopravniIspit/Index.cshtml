
@{
    ViewData["Title"] = "Index";
}


@model RS1_Ispit_asp.net_core.ViewModels.PopravniIspitIndexVM

<form asp-action="Odaberi">
    <div class="form-group">
        <label>Skolska godina</label>
        <select asp-for="SkolskaGodinaId" asp-items="@Model.ListaSkolskihGodina" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Skola</label>
        <select asp-for="SkolaId" asp-items="@Model.ListaSkola" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Razred</label>
        <select asp-for="Razred" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Odaberi</button>
</form>