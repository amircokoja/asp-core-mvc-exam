@model Ispit_2017_02_15.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    string error_poruka = (string)TempData["error_poruka"];
    Layout = "_LayoutAnonim";
}

<div class="col-md-4 col-md-offset-4">
    <form asp-action="Login">

        <div class="form-group">
            <label>Korisnicko ime</label>
            <div>
                <input asp-for="KorisnickoIme"  class="form-control" />
            </div>
            <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Sifra: </label>
            <div>
                <input asp-for="Lozinka" class="form-control" />
            </div>
            <span asp-validation-for="Lozinka" class="text-danger"></span>
        </div>
        <input type="submit" value="Logiraj se" class="btn btn-danger form-control" />
    </form>

    @if (error_poruka != null)
    {
        <br />
        <div class="alert alert-danger">
            @error_poruka
        </div>
    }
</div>  